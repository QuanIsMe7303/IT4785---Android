<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="#dedede"
        android:gravity="center"
        android:padding="10dp"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textSize="80sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/showOp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/sign"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="#dedede"
            android:text="+/-"
            android:textColor="@android:color/black"
            android:textSize="24dp"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/number5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/number1"
            app:layout_constraintVertical_bias="0.5" />

        <Button
            android:id="@+id/button43"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="#dedede"
            android:text="."
            android:textColor="@android:color/black"
            android:textSize="24dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toStartOf="@+id/minus"
            app:layout_constraintHorizontal_bias="0.523"
            app:layout_constraintStart_toEndOf="@+id/number5"
            app:layout_constraintTop_toTopOf="@+id/number0" />

        <Button
            android:id="@+id/equal"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="#dedede"
            android:text="="
            android:textColor="@android:color/black"
            android:textSize="24dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/number6"
            app:layout_constraintTop_toTopOf="@+id/button43" />

        <Button
            android:id="@+id/number0"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="#efefef"
            android:text="0"
            android:textColor="@android:color/black"
            android:textSize="24dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toStartOf="@+id/number6"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toEndOf="@+id/number4"
            app:layout_constraintTop_toTopOf="@+id/sign" />

        <Button
            android:id="@+id/number1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="#efefef"
            android:text="1"
            android:textColor="@android:color/black"
            android:textSize="24dp"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toTopOf="@+id/sign"
            app:layout_constraintEnd_toStartOf="@+id/number5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/number4"
            app:layout_constraintVertical_bias="0.5" />

        <Button
            android:id="@+id/number3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="#efefef"
            android:text="3"
            android:textColor="@android:color/black"
            android:textSize="24dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toStartOf="@+id/minus"
            app:layout_constraintHorizontal_bias="0.523"
            app:layout_constraintStart_toEndOf="@+id/number5"
            app:layout_constraintTop_toTopOf="@+id/number2" />

        <Button
            android:id="@+id/plus"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="#dedede"
            android:text="+"
            android:textColor="@android:color/black"
            android:textSize="24dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/number6"
            app:layout_constraintTop_toTopOf="@+id/number3" />

        <Button
            android:id="@+id/number2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="#efefef"
            android:text="2"
            android:textColor="@android:color/black"
            android:textSize="24dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toStartOf="@+id/number6"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toEndOf="@+id/number4"
            app:layout_constraintTop_toTopOf="@+id/number1" />

        <Button
            android:id="@+id/number4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="#efefef"
            android:text="4"
            android:textColor="@android:color/black"
            android:textSize="24dp"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toTopOf="@+id/number1"
            app:layout_constraintEnd_toStartOf="@+id/number5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/number7"
            app:layout_constraintVertical_bias="0.5" />

        <Button
            android:id="@+id/number6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="#efefef"
            android:text="6"
            android:textColor="@android:color/black"
            android:textSize="24dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toStartOf="@+id/minus"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/number5"
            app:layout_constraintTop_toTopOf="@+id/number5" />

        <Button
            android:id="@+id/minus"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="#dedede"
            android:text="-"
            android:textColor="@android:color/black"
            android:textSize="24dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/number6"
            app:layout_constraintTop_toTopOf="@+id/number6" />

        <Button
            android:id="@+id/number5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="#efefef"
            android:text="5"
            android:textColor="@android:color/black"
            android:textSize="24dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toStartOf="@+id/number6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/number4"
            app:layout_constraintTop_toTopOf="@+id/number4" />

        <Button
            android:id="@+id/number7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="#efefef"
            android:text="7"
            android:textColor="@android:color/black"
            android:textSize="24dp"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toTopOf="@+id/number4"
            app:layout_constraintEnd_toStartOf="@+id/number8"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clearCur"
            app:layout_constraintVertical_bias="0.5" />

        <Button
            android:id="@+id/number8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="#efefef"
            android:text="8"
            android:textColor="@android:color/black"
            android:textSize="24dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toStartOf="@+id/number9"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/number7"
            app:layout_constraintTop_toTopOf="@+id/number7" />

        <Button
            android:id="@+id/multiply"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="#dedede"
            android:text="x"
            android:textColor="@android:color/black"
            android:textSize="24dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/number9"
            app:layout_constraintTop_toTopOf="@+id/number9" />

        <Button
            android:id="@+id/number9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="#efefef"
            android:text="9"
            android:textColor="@android:color/black"
            android:textSize="24dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toStartOf="@+id/multiply"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/number8"
            app:layout_constraintTop_toTopOf="@+id/number8" />

        <Button
            android:id="@+id/clearCur"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="#dedede"
            android:text="CE"
            android:textColor="@android:color/black"
            android:textSize="24dp"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toTopOf="@+id/number7"
            app:layout_constraintEnd_toStartOf="@+id/clearAll"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <Button
            android:id="@+id/button3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="#dedede"
            android:text="BS"
            android:textColor="@android:color/black"
            android:textSize="24dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toStartOf="@+id/divide"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/clearAll"
            app:layout_constraintTop_toTopOf="@+id/clearAll"
            app:layout_constraintVertical_chainStyle="spread" />

        <Button
            android:id="@+id/divide"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="#dedede"
            android:text="/"
            android:textColor="@android:color/black"
            android:textSize="24dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button3"
            app:layout_constraintTop_toTopOf="@+id/button3"
            app:layout_constraintVertical_chainStyle="spread" />

        <Button
            android:id="@+id/clearAll"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="#dedede"
            android:text="C"
            android:textColor="@android:color/black"
            android:textSize="24dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toStartOf="@+id/button3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/clearCur"
            app:layout_constraintTop_toTopOf="@+id/clearCur"
            app:layout_constraintVertical_chainStyle="spread" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>